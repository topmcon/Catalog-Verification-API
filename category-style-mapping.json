  "usage_notes": {
    "style_types": {
      "design_styles": "Aesthetic/visual styles like Modern, Contemporary, Traditional (apply to most non-appliance categories)",
      "functional_styles": "Installation/usage styles like Alcove, Freestanding, Wall-Mounted (apply to appliances and fixtures)"
    },
    "validation_logic": {
      "step_1": "When AI returns a style, check if it's in the valid list for that category",
      "step_2": "If valid AND in Salesforce picklist \u2192 use it directly",
      "step_3": "If valid but NOT in Salesforce picklist \u2192 add to Style_Requests for Salesforce to create",
      "step_4": "If not valid for category \u2192 log warning, don't use"
    },
    "salesforce_id_usage": "Use salesforce_id to match this category to the Category object in Salesforce. null indicates no direct SF category match exists.",
    "unknown_categories": "For categories not in this mapping, universal_design_styles are used as fallback",
    "case_sensitivity": "All comparisons are case-insensitive"
  },
  "import_instructions": {
    "salesforce_setup": [
      "1. Import category_style_mapping into a Custom Metadata Type or Custom Setting",
      "2. Use salesforce_id to create lookup relationships to Category__c object",
      "3. Create a validation rule to ensure Style picklist values match this mapping",
      "4. Use this data to populate dependent picklists (Category \u2192 Style)",
      "5. For new styles returned by API, create picklist values and sync back to API"
    ],
    "data_loader": [
      "1. Transform this JSON into CSV format with columns: Category__c (salesforce_id), Category_Name__c, Valid_Styles__c (comma-separated)",
      "2. Load into Category_Style_Mapping__mdt custom metadata type",
      "3. Or create a custom object Category_Style_Rule__c for more flexibility"
    ],
    "apex_usage": [
      "1. Load this JSON into a Static Resource named 'CategoryStyleMapping'",
      "2. Parse with JSON.deserializeUntyped() in Apex",
      "3. Use salesforce_id to query Category__c records",
      "4. Use to validate Style values before saving Catalog_Product__c records",
      "5. Populate dependent picklists dynamically based on selected Category"
    ]
  }
